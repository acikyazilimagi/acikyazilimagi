---
import { NAV_ITEMS } from '$/config'
---
<nav class="nav py-3">
    <ul class="nav-list" transition:animate="fade">
         {
            Object.keys(NAV_ITEMS).map(navItemKey => <li>
                <a class:list={[
                    `pb-1 border-b-2 hover:border-slate-400 hover:dark:border-slate-700 `,
                    Astro.url.pathname !== NAV_ITEMS[navItemKey].path ? 'border-slate-100 dark:border-slate-800': '',
                    Astro.url.pathname === NAV_ITEMS[navItemKey].path ? 'border-theme-primary' : ''
                ]} href={NAV_ITEMS[navItemKey].path} title={NAV_ITEMS[navItemKey].title}>{NAV_ITEMS[navItemKey].title}</a>
            </li>)
        }
    </ul>
</nav>
<style>
    .nav-list {
        @apply inline-flex list-none text-xs gap-2 md:text-base md:gap-4 xl:text-xl xl:gap-8 font-semibold text-theme-primary dark:text-theme-dark-primary py-2 flex-wrap mb-8
    }
</style>
